            <view class="swiper-item ">
              <!-- <image></image> -->
              <image bindtap="to_banner_detail" data-item="{{item}}" style="width:100%;height:380rpx"  src="{{item.banner_url}}" ></image>
            </view>
          </swiper-item>
        </block>
      </swiper>
</view>
