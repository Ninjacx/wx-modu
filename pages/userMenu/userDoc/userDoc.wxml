<view class="displayFlex cardView ">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text><text>紧急联系人</text></view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input class="weui-input pr10" placeholder="请填写紧急联系人" />
    </view>
  </view>
</view>
<view class="displayFlex cardView">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>紧急联系人电话</view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input value="{{pageData.volume}}" bindinput="updateInputValue"  data-inputKey="volume" class="weui-input pr10" type="number" placeholder="请填写紧急联系人电话" />
    </view>
  </view>
</view>
<view wx:if="{{pageData.user_type == 1}}" class="displayFlex cardView">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>地址</view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input value="{{pageData.volume}}" bindinput="updateInputValue"  data-inputKey="volume" class="weui-input pr10" type="number" placeholder="请填写默认提车地址" />
    </view>
  </view>
</view>
