<view class="">
<view class="colorRed textCenter">*项为必填信息</view>
<view class="displayFlex cardView">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>类型</view>
  <view class="flex1 textRight">
    <picker bindchange="bindPickerChange" value="{{pageData.user_type}}" range-key="userTypeName" range="{{multiArray}}">
    <view class="picker">
      {{multiArray[pageData.user_type].userTypeName}}
    </view>
  </picker>
  </view>
</view>
<view class="displayFlex cardView">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>姓名</view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input class="weui-input" maxlength="10" placeholder="请填写姓名" />
    </view>
  </view>
</view>
<view class="displayFlex cardView">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>联系人电话</view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input value="{{pageData.phone}}" bindinput="updateInputValue"  data-inputKey="phone" class="weui-input pr10" type="number" placeholder="请填写联系人电话" />
    </view>
  </view>
</view>
<view wx:if="{{pageData.user_type == 0}}" class="displayFlex cardView ">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>驾驶证号码</view>
  <view class="flex1 textRight">
    <view class="weui-cell weui-cell_input">
      <input class="weui-input pr10" type="number" placeholder="请填写驾驶证号码" />
    </view>
  </view>
</view>
<view wx:if="{{pageData.user_type == 0}}" class="displayFlex cardView ">
  <view class="flex1 lh50"><text class="mr10 colorRed">*</text>性别</view>
  <view class="flex1 mr10">
    <view catchtap="selectSex" class="fr"  data-sex="0">
      <image class="sexSize vm ml20" src="/image/{{sex === '0'? 'v1':'v0'}}.png"></image> <text class="ml5 vm {{sex === '0'?'':'colora5'}}">女</text>
    </view>
    <view catchtap="selectSex" class="fr" data-sex="1">
      <image class="sexSize vm" src="/image/{{sex === '1'? 'n1':'n0'}}.png"></image> <text class="ml5 vm {{sex === '1'?'':'colora5'}}">男</text>
    </view>
  </view>
</view>
